{
    "root": true,
    "env": {
        "node": true,
        "jasmine": true
    },
    "extends": [
        "plugin:vue/essential",
        "plugin:vuejs-accessibility/recommended",
        "@vue/airbnb"
    ],
    "rules": {
        "import/order": [
            "error",
            {
                "groups": [
                    "external",
                    "index",
                    "sibling",
                    "parent",
                    "internal",
                    "builtin",
                    "object"
                ]
            }
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-plusplus": [
            2,
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "indent": [
            "error",
            4
        ],
        "max-len": [
            "error",
            {
                "code": 130
            }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "vue/valid-v-on": 0,
        "vue/no-parsing-error": 0,
        "import/prefer-default-export": 0,
        "no-promise-executor-return": 0,
        "no-underscore-dangle": [
            "error",
            {
                "allowAfterThis": true
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": true,
                "ignorePropertyModificationsFor": [
                    "state"
                ]
            }
        ],
        "vue/valid-v-slot": ["error", {
            "allowModifiers": true
        }],
        "vue/no-mutating-props": 0
    },
    "parserOptions": {
        "parser": "@babel/eslint-parser"
    },
    "globals": {
        "jest": false,
        "createTestStore": false,
        "getDropEvent": false,
        "prepareVuetify": false,
        "prepareVuex": false,
        "getVuetify": false,
        "mountedComponentFactory": false,
        "createDataApp": false,
        "removeDataApp": false,
        "createTestComponent": false,
        "shallowMountedComponentFactory": false,
        "attachToDocument": false,
        "flushTest": false,
        "flushTestAll": false,
        "setupVuetifyForTests": false
    }
}
